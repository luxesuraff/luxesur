---
const { phone, label = "Call Now" } = Astro.props;
---
<style>
.sticky-cta {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #0b5cff;
  color: #fff;
  padding: 14px;
  text-align: center;
  font-weight: 600;
  display: none;
  z-index: 999;
}
.sticky-cta a {
  color: #fff;
  text-decoration: none;
  font-size: 18px;
}
@media (min-width: 768px) {
  .sticky-cta {
    max-width: 420px;
    margin: 0 auto 20px;
    border-radius: 8px;
  }
}
</style>

<div id="stickyCta" class="sticky-cta">
  <a href={`tel:${phone}`}>{label}: {phone}</a>
</div>

<script>
  let shown = false;
  window.addEventListener("scroll", () => {
    if (!shown && window.scrollY > window.innerHeight * 0.3) {
      document.getElementById("stickyCta").style.display = "block";
      shown = true;
    }
  });
</script>
